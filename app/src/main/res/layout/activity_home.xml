<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    android:background="#24772F">


    <TableRow
        android:onClick="startAnimals"
        android:background="#FFD900"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_width="0dp">

        <com.mijn_eerste_woordjes.wordgrid.RoundedImageView
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:id="@+id/animals_category"
            android:src="@drawable/butterfly"
            android:layout_margin="12dip"/>

        <TextView
            android:text="Animals"
            android:gravity="end"
            android:padding="12dip"
            android:textSize="36sp"/>
    </TableRow>


    <TableRow
        android:onClick="startVehicles"
        android:background="#025B97"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center">

        <com.mijn_eerste_woordjes.wordgrid.RoundedImageView
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:id="@+id/vehicles_category"
            android:src="@drawable/category_vehicles"
            android:layout_margin="12dip"/>

        <TextView
            android:text="Vehicles"
            android:gravity="end"
            android:padding="12dip"
            android:textSize="36sp"/>
    </TableRow>


</TableLayout>

