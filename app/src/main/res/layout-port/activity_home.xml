<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@color/yellow"
        android:orientation="vertical"
        android:id="@+id/animals_category">

        <com.mijn_eerste_woordjes.wordgrid.RoundedImageView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:src="@drawable/butterfly" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:padding="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:text="@string/animals_nav_button"
            android:textSize="@dimen/home_text_size"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@color/blue"
        android:orientation="vertical"
        android:id="@+id/vehicles_category">

        <com.mijn_eerste_woordjes.wordgrid.RoundedImageView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:src="@drawable/category_vehicles" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:padding="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:text="@string/vehicles_nav_button"
            android:textSize="@dimen/home_text_size"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:background="@color/green"
        android:orientation="vertical"
        android:id="@+id/jobs_category">

        <com.mijn_eerste_woordjes.wordgrid.RoundedImageView
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:src="@drawable/fireman_picture" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="0"
            android:padding="@dimen/activity_margin"
            android:gravity="center_horizontal"
            android:text="@string/jobs_nav_button"
            android:textSize="@dimen/home_text_size"/>
    </LinearLayout>
</LinearLayout>